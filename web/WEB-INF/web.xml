<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>SecurityServlet</servlet-name>
        <servlet-class>com.ttre16.jordan.servlets.SecurityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SecurityServlet</servlet-name>
        <url-pattern>/head/security</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecurityServlet</servlet-name>
        <url-pattern>/sneakers/security</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecurityServlet</servlet-name>
        <url-pattern>/clothes/security</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecurityServlet</servlet-name>
        <url-pattern>/other/security</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>CustomerCartServlet</servlet-name>
        <servlet-class>com.ttre16.jordan.servlets.CustomerCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/sneakers/jordan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/head/jordan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/clothes/jordan</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerCartServlet</servlet-name>
        <url-pattern>/other/jordan</url-pattern>
    </servlet-mapping>

</web-app>